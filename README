
wx-config --list
sudo apt-get purge wx3.1-headers                                                            // якшо дві версії
sudo apt-get install wx2.8-headers libwxgtk2.8-0 libwxgtk2.8-dev                            // install wx2.8


g++ `wx-config --cppflags` main.cpp Piece.cpp TetrisGame.cpp `wx-config --libs`
./a.out
АБО
g++ -c `wx-config --cppflags` main.cpp Piece.cpp GamePanel.cpp Frame.cpp InfoPanel.cpp `wx-config --libs`
g++ -o tetris `wx-config --cppflags` main.o Piece.o GamePanel.o Frame.o InfoPanel.o `wx-config --libs`
./tetris

mpic++ -c `wx-config --cppflags` main.cpp Piece.cpp GamePanel.cpp Frame.cpp InfoPanel.cpp client_server.cpp `wx-config --libs` -lsfml-graphics -lsfml-window -lsfml-system -lsfml-network
mpic++ -o tetris `wx-config --cppflags` main.o Piece.o GamePanel.o Frame.o InfoPanel.o client_server.o `wx-config --libs` -lsfml-graphics -lsfml-window -lsfml-system -lsfml-network

mpirun -np 2 ./tetris
./
